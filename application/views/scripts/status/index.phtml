<script type='text/javascript'>
dbHelper='/icingaweb2/trapdirector/helper/dbmaintenance';
logHelper='/icingaweb2/trapdirector/helper/logdestination';
// TODO : put function in a js (duplicate from add.phtml)
function displayWarning(message)
{
	// for now
	alert(message);
}
function displayOK(message)
{
	// for now
	alert(message);
}

function click_button_log()
{
	destination=$("#select_log_destination").val();
	file=$("#input_current_log").val();
	level=$("#select_log_level").val();
	$.ajax({
			url: logHelper,
			async: true,
			dataType: "json",
			type: "POST",
			data: 
			{
				"destination"	: 	destination,
				"file"			:	file,
				"level"			:	level
			},
	        success: function (data) 
			{
				//alert(data.status);
				if (data.status == "OK") 
				{
					displayOK("Done");
				} 
				else 
				{
					displayWarning("Error : "+data.status);		
				}
			},
			error: function (data)
			{
				displayWarning ("error" + data);
			}
	});	
}


function click_button_trap(action)
{
	days=$("#input_text_trap_days").val();
	$.ajax({
			url: dbHelper,
			async: true,
			dataType: "json",
			type: "POST",
			data: 
			{
				"action"	: 	action,
				"days"		:	days
			},
	        success: function (data) 
			{
				//alert(data.status);
				if (data.status == "OK") 
				{
					displayOK("Done");
				} 
				else 
				{
					displayWarning("Error : "+data.status);		
				}
			},
			error: function (data)
			{
				displayWarning ("error" + data);
			}
	});	
}

$(function() {
	return;
});

</script>